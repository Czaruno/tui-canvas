{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "allowImportingTsExtensions": true,
    "types": ["bun-types", "node"],
    "baseUrl": ".",
    "paths": {
      "@opentui/solid": ["../../node_modules/@opentui/solid"]
    }
  },
  "include": ["./**/*.tsx", "./**/*.ts"]
}
