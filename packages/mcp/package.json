{
  "name": "tui-canvas",
  "version": "0.3.0",
  "description": "MCP server for TUI Canvas - Framework-agnostic interactive terminal canvases for AI coding assistants",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "tui-canvas-mcp": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@tui-canvas/protocol": "workspace:*",
    "@tui-canvas/cli": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tui-canvas",
    "opentui",
    "ink",
    "opencode",
    "claude",
    "cursor",
    "gemini",
    "grok",
    "ai",
    "terminal",
    "canvas"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anomalyco/tui-canvas"
  },
  "homepage": "https://github.com/anomalyco/tui-canvas#readme"
}
